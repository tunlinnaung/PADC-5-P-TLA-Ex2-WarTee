<?xml version="1.0" encoding="utf-8"?>
<wartee.tunlinaung.wartee.DetailsInRestaurantsViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_news_details_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/spice_up_restaurant"
        android:src="@drawable/gradient"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_restaurant_food_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MarLar Shan Kaw"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_xxxlarge"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="normal"
            android:textColor="@color/whitefull"
            />

        <TextView
            android:id="@+id/tv_restaurant_food_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spice up"
            android:layout_above="@id/tv_restaurant_food_details"
            android:layout_alignLeft="@id/tv_restaurant_food_details"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold"
            android:textColor="@color/whitefull"
            />

    </RelativeLayout>

</wartee.tunlinaung.wartee.DetailsInRestaurantsViewItem>