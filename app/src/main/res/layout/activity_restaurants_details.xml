<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pizza"
            android:src="@drawable/gradient"
            android:adjustViewBounds="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_32dp"
            android:paddingTop="@dimen/margin_medium_2"
            android:paddingLeft="@dimen/margin_medium_2"
            />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_medium_3">

        <TextView
            android:id="@+id/tv_food_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="White sauce pizza"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="@dimen/text_heading_1x"
            />

        <TextView
            android:id="@+id/tv_food_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With Chicken"
            android:layout_below="@id/tv_food_title"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="@dimen/text_regular_3x"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="52dp"
            android:text="$ 269"
            android:background="@drawable/shape_border_white_primary_round"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold"
            android:textColor="@color/whitefull"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domino's is the world's largest pizza delivery service, with a footprint that extends far beyond the US to almost 11,000 stores in 70 countries from Australia."
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:layout_marginRight="@dimen/margin_medium_3"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:textColor="@color/secondary_text"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular"
        android:lineSpacingMultiplier="1.2"
        />

    <EditText
        android:id="@+id/et_add_note"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/et_bottom_line"
        android:hint="@string/et_hint"
        android:inputType="text"
        android:padding="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:maxLines="1"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xxlarge"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2">

        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_border_white_primary"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_minus_cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="@dimen/margin_medium_3"
                android:paddingRight="@dimen/margin_small"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_remove_24dp"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/tv_cart_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/text_regular_3x"
                android:textColor="@color/whitefull"
                />

            <ImageView
                android:id="@+id/iv_plus_cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_medium_3"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_add_24dp"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/shape_border_white_primary"
            android:text="Add to cart"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_medium_2"
            android:paddingRight="@dimen/margin_medium"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/whitefull"
            android:textSize="@dimen/text_regular_2x"
            />

    </LinearLayout>

</LinearLayout>